<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/tint"
        android:text="0"

        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/Eerie_black"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/zero"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/Eerie_black"
        android:text="4"
        android:textColor="@color/white"

        app:layout_constraintBottom_toTopOf="@+id/one"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/Eerie_black"
        android:text="7"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/four"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/tint"
        android:text="C"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/seven"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/tint"
        android:text="."
        android:paddingBottom="15sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/zero"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/Eerie_black"
        android:text="2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/dot"
        app:layout_constraintLeft_toRightOf="@id/one"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/Eerie_black"
        android:text="5"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/two"
        app:layout_constraintLeft_toRightOf="@id/four"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/Eerie_black"
        android:text="8"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/five"
        app:layout_constraintLeft_toRightOf="@id/seven"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/tint"
        android:text="%"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/eight"
        app:layout_constraintLeft_toRightOf="@id/clear"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />


    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/Eerie_black"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/equal"
        app:layout_constraintLeft_toRightOf="@id/two"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/Eerie_black"
        android:text="6"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/three"
        app:layout_constraintLeft_toRightOf="@id/five"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
       android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/Eerie_black"
        android:text="9"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/six"
        app:layout_constraintLeft_toRightOf="@id/eight"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:background="@color/tint"
        android:text="B"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/nine"
        app:layout_constraintLeft_toRightOf="@id/percent"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/equal"
        android:layout_width="235sp"
        android:layout_height="@dimen/height_50"
        android:background="@color/tint"
        android:paddingEnd="50sp"
        android:text="="
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dot"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addition"
        android:layout_width="147sp"
        android:paddingEnd="30sp"
        android:layout_height="@dimen/height_50"
        android:background="@color/tint"
        android:text="+"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/equal"
        app:layout_constraintLeft_toRightOf="@id/three"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="147sp"
        android:paddingEnd="30sp"
        android:layout_height="@dimen/height_50"
        android:background="@color/tint"
        android:text="-"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/addition"
        app:layout_constraintLeft_toRightOf="@id/six"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="147sp"
        android:layout_height="@dimen/height_50"
        android:paddingEnd="30sp"
        android:background="@color/tint"
        android:text="*"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/subtract"
        app:layout_constraintLeft_toRightOf="@id/nine"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold" />

    <Button
        android:id="@+id/divide"
        android:layout_width="147sp"
        android:layout_height="@dimen/height_50"
        android:paddingEnd="30sp"
        android:background="@color/tint"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_20"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/back"
        app:layout_constraintStart_toEndOf="@+id/back" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="262sp"
        android:background="@drawable/border"
        android:paddingStart="20sp"
        android:paddingTop="60sp"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/clear"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>